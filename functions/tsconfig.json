{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/api/@types",
      "./node_modules/@types"
    ],
    "sourceMap": true // required for debugger to run
  },
  "compileOnSave": true
}
